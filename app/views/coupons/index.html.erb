<h1>Listing coupons</h1>

<table class="table table-hover">
  <tr>
    <th>Code</th>
    <th>Description</th>
    <th>Expired</th>
    <th>Offer</th>
    <th>Minimum Amt.</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.code %></td>
    <td><%= coupon.description %></td>
    <td><%= coupon.expired_at.mdyyyy %></td>
    <td><%= coupon.offer_amount %> Off</td>
    <td><%= number_to_currency(coupon.minimum_amount) %></td>
    <td><%= link_to 'Show', coupon_url(coupon) %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon_url(coupon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

