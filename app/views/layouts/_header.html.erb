<div class="masthead">
  <div class="logo banner center">
    <%= link_to root_path do %>
      <%= image_tag asset_path('home/5th_arc_banner.png'), alt: 'arc_conference_banner_light', :class => 'arc-banner' %>
    <% end %>
  </div>
  <ul class="nav nav-justified">
    <li class="<%= controller.action_name == 'home' ? 'active' : '' %>"><%= link_to "Home", root_path %></li>
    <li class="<%= controller.action_name == 'help' ? 'active' : '' %>"><%= link_to "Help", help_path %></li>
    <% if signed_in? %>
      <li><%= link_to "Users", users_path %></li>
      <li id="fat-menu" class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Account <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Sign out", signout_path, method: "delete" %>
          </li>
        </ul>
      </li>
    <% else %>
      <li class="<%= controller.controller_path == 'sessions' && controller.action_name == 'new' ? 'active' : '' %>"><%= link_to "Sign in", signin_path %></li>
    <% end %>
  </ul>
</div>