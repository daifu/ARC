<%= form_for(@line_item, :html => {:class => 'form-horizontal', :role => 'from'}) do |f| %>
  <% if @line_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@line_item.errors.count, "error") %> prohibited this line_item from being saved:</h2>

      <ul>
      <% @line_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Event:</label>
    <div class="col-sm-10 select-option">
      <%= f.select :event_id, Event.all.collect {|e| [e.name, e.id]}, {include_blank: true} %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Description:</label>
    <div class="col-sm-10">
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Amount:</label>
    <div class="col-sm-10">
      <%= f.number_field :amount %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Quantity:</label>
    <div class="col-sm-10">
      <%= f.number_field :quantity %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Cost:</label>
    <div class="col-sm-10">
      <%= f.number_field :cost %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit(:class => 'btn btn-default') %>
    </div>
  </div>
<% end %>
